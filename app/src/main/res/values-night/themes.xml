<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ResponsiveCalculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@color/background_dark</item>
    </style>

    <style name="btn_grey">
        <item name="android:textSize">32dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/worksans</item>
        <item name="iconTint">@color/white</item>
        <item name="android:background">@drawable/btn_greybackground</item>
        <item name="backgroundTint">@color/btn_grey</item>
    </style>
    <style name="btn_blue">
        <item name="android:textSize">32dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/worksans</item>
        <item name="android:background">@drawable/btn_bluebackground</item>
    </style>
    <style name="btn_light">
        <item name="android:textSize">32dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/worksans</item>
        <item name="iconTint">@color/white</item>
        <item name="android:background">@drawable/btn_darkbackground</item>
        <item name="backgroundTint">@color/btn_dark</item>
    </style>
    <style name="text">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/worksans</item>
        <item name="android:textAlignment">textEnd</item>
    </style>
</resources>